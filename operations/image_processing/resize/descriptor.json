{
    "title":"resize",
    "desc":"resizes an image",
    "input":[
	        {
                "str":"img", 
                "type":"image", 
                "description":"the image to be resized, jpg,png, or gif", 
                "optional":false
            }
	    ],
    "params":[
        {
            "str":"xsize", 
            "type":"int", 
            "description":"the width of the new image, if only xsize included, xsize/ysize ratio is preserved", 
            "optional":true
        },
        {
            "str":"ysize", 
            "type":"int", 
            "description":"the height of the new image, if only ysize included, ysize/xsize ratio is preserved", 
            "optional":true
        },
        {
            "str":"algo", 
            "type":"string", 
            "description":"algorithm to use for resizing", 
            "optional":true
        }
    ],
    "output":"image"
}
